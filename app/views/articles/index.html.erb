
<h1 class="s1">Listing article</h1>
<h1 class="s2"s><%= link_to 'New article',new_article_path %></h1><br><br>

	<% @articles.each do |article| %>
	<div class="container-fluid">  
 		 <div class="row">
 		    <div class="col-sm-6" style="background-color:lavender;">
   				<div class="col-sm-4" style="background-color:lavender;"><%= article.title %></div>
    			<div class="col-sm-8    display: block;" style="background-color:lavenderblush;"><%= article.text %></div>
    		</div>
    		
    		<div class="col-sm-2" style="background-color:lavender;"><%= link_to 'Show', article_path(article) %></div>
   			<div class="col-sm-2" style="background-color:lavender;"><%= link_to 'Edit', edit_article_path(article) %></div>
   			<div class="col-sm-2" style="background-color:red;"><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></div>
    
  	</div>
</div>
<% end %>
